<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="haorcadomaui.MainPage">

    <ScrollView>

        <VerticalStackLayout
        Padding="20,3"
        Spacing="20">
            <StackLayout
            Margin="3,3"
            Orientation="Horizontal"
            Spacing="50">

                <Label
                x:Name="puntaje"
                Text="Puntaje = 0"
                FontSize="15"
                BackgroundColor="White"/>

                <Label
                x:Name="tiempol"
                Text="Tiempo = 40"
                FontSize="15"
                BackgroundColor="White"/>

            </StackLayout>

            <StackLayout
            Orientation="Horizontal"
            Spacing="6"
            HorizontalOptions="CenterAndExpand">

                <Image
                x:Name="personaje"
                Source="escenario.png"/>

            </StackLayout>

            <StackLayout
            Orientation="Horizontal"
            Spacing="6"
            HorizontalOptions="CenterAndExpand">

                <Label
                x:Name="numero1"
                Text="00"
                FontSize="20"
                Margin="5,5"
                BackgroundColor="White"/>

                <Label
                Text="x"
                FontSize="17"
                Margin="5,5"
                BackgroundColor="White"/>

                <Label
                x:Name="numero2"
                Text="00"
                FontSize="20"
                Margin="5,5"
                BackgroundColor="White"/>

                <Label
                Text="="
                FontSize="19"
                Margin="5,5"
                BackgroundColor="White"/>

                <Entry
                Keyboard="Numeric"
                x:Name="respuestau"
                Placeholder="respuesta"
                MaxLength="3"
                Completed ="Comprobarc"
                WidthRequest="90"
                IsEnabled="False"
                BackgroundColor="White"/>

            </StackLayout>

            <StackLayout
            Orientation="Horizontal"
            Spacing="6"
            HorizontalOptions="CenterAndExpand">


                <Button
                x:Name="Continuar"
                VerticalOptions="Center"
                Text="Iniciar"
                Clicked="Iniciar_juego"
                IsEnabled="True"
                FontSize="15" />


                <Button
                x:Name="cambiodificultad"
                VerticalOptions="Center"
                Text="Dificultad:Normal"
                Clicked="cambiardi"
                IsEnabled="True"
                FontSize="15" />

            </StackLayout>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
